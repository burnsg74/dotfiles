# Command Typos
alias mroe="more"
alias vi="nvim"

## Quick Edit aliases
alias aliases="nvim ~/.config/zsh/aliases"
alias aliases-local="nvim ~/.config/zsh/aliases-local"
alias zshconfig="nvim ~/.config/zsh/zshrc"
alias ohmyzsh="nvim ~/.config/oh-my-zsh/oh-my-zsh"
alias vi-cfg="nvim ~/.config/nvim/init.vim"
alias hosts="sudo nvim /etc/hosts"
